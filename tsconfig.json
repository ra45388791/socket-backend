{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "outDir": "./dist",
        "strict": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@src/*": [
                "./src/*"
            ],
            "@global/*": [
                "./src/playerRoom/global/*"
            ]
        },
        "useUnknownInCatchVariables": false
    },
    "include": [
        "src/**/*.ts",
        "spec/**/*.ts",
        "build.ts",
    ],
    "exclude": [
        "src/public/"
    ]
}